{
  "name": "calculadora-intereses",
  "version": "1.0.0",
  "description": "Calculadora de interÃ©s simple y compuesto - Examen CI/CD",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest --coverage",
    "build": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist'))fs.mkdirSync('dist'); fs.readdirSync('src').filter(f=>f.endsWith('.js')).forEach(f=>fs.copyFileSync('src/'+f,'dist/'+f)); console.log('Build successful!')\""
  },
  "keywords": [
    "calculadora",
    "interes",
    "ci-cd"
  ],
  "author": "Aleks Narvaez",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
